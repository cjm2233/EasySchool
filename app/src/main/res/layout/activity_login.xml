<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <com.example.easyschool.ui.CircleImageView
        android:id="@+id/civ_head_login"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="帐号:"
            android:textColor="colorAhp_Black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_user_login"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="null"
            android:textColor="colorAhp_Black"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="密码:"
            android:textColor="colorAhp_Black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et_password_login"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="null"
            android:textColor="colorAhp_Black"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckedTextView
            android:id="@+id/ctv_password_login"
            android:text="记住密码"
            android:textColor="colorAhp_Black_8"
            android:checkMarkTint="colorAhp_Black_8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp"/>

        <CheckedTextView
            android:id="@+id/ctv_login_login"
            android:text="自动登录"
            android:textColor="colorAhp_Black_8"
            android:checkMarkTint="colorAhp_Black_8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>